<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Admin - ES Parfumerie</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .sidebar { min-height: 100vh; }
        .sidebar a:hover { background-color: rgba(255,255,255,0.1); }
        .modal { display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); }
        .modal-content { background: white; margin: 5% auto; padding: 20px; border-radius: 10px; width: 90%; max-width: 800px; max-height: 90vh; overflow-y: auto; }
        .notification { position: fixed; top: 20px; right: 20px; z-index: 10000; padding: 15px 20px; border-radius: 8px; color: white; animation: slideIn 0.3s ease, fadeOut 0.3s ease 2.7s; }
        @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
        @keyframes fadeOut { from { opacity: 1; } to { opacity: 0; } }
        .notification-success { background: #4CAF50; }
        .notification-error { background: #ff4757; }
        .btn:disabled { opacity: 0.5; cursor: not-allowed; }
        .image-preview { width: 100px; height: 100px; object-fit: cover; border-radius: 8px; margin-top: 10px; }
        .current-image { width: 100px; height: 100px; object-fit: cover; border-radius: 8px; }
    </style>
</head>
<body class="bg-gray-100">
    <div class="flex">
        <!-- Sidebar -->
        <div class="sidebar bg-purple-800 text-white w-64">
            <div class="p-6">
                <h1 class="text-2xl font-bold">ES Parfumerie</h1>
                <p class="text-sm text-purple-200 mt-1">Panel Administrateur</p>
            </div>
            <nav class="mt-8">
                <a href="/admin" class="block py-3 px-6 hover:bg-purple-700">
                    <i class="fas fa-chart-bar mr-3"></i> Tableau de bord
                </a>
                <a href="#" onclick="loadProducts()" class="block py-3 px-6 hover:bg-purple-700">
                    <i class="fas fa-cube mr-3"></i> Produits
                </a>
                <a href="#" onclick="loadOrders()" class="block py-3 px-6 hover:bg-purple-700">
                    <i class="fas fa-shopping-cart mr-3"></i> Commandes
                </a>
                <a href="#" onclick="loadSettings()" class="block py-3 px-6 hover:bg-purple-700">
                    <i class="fas fa-cog mr-3"></i> Param√®tres
                </a>
                <button onclick="logout()" class="w-full text-left block py-3 px-6 hover:bg-purple-700 mt-8">
                    <i class="fas fa-sign-out-alt mr-3"></i> D√©connexion
                </button>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-8">
            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
                <h2 class="text-3xl font-bold text-gray-800" id="page-title">Tableau de bord</h2>
                <div class="text-gray-600">
                    Connect√© en tant que <span class="font-semibold"><%= user.username %></span>
                </div>
            </div>

            <!-- Dynamic Content Area -->
            <div id="content-area">
                <!-- Dashboard Stats (Default) -->
                <div id="dashboard-content">
                    <!-- Stats Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                        <div class="bg-white rounded-lg shadow p-6">
                            <div class="flex items-center">
                                <div class="bg-blue-100 p-3 rounded-lg">
                                    <i class="fas fa-cube text-blue-600 text-xl"></i>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-gray-500 text-sm">Produits</h3>
                                    <p id="products-count" class="text-2xl font-bold">Chargement...</p>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white rounded-lg shadow p-6">
                            <div class="flex items-center">
                                <div class="bg-green-100 p-3 rounded-lg">
                                    <i class="fas fa-shopping-cart text-green-600 text-xl"></i>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-gray-500 text-sm">Commandes</h3>
                                    <p id="orders-count" class="text-2xl font-bold">0</p>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white rounded-lg shadow p-6">
                            <div class="flex items-center">
                                <div class="bg-purple-100 p-3 rounded-lg">
                                    <i class="fas fa-star text-purple-600 text-xl"></i>
                                </div>
                                <div class="ml-4">
                                    <h3 class="text-gray-500 text-sm">Produits en vedette</h3>
                                    <p id="featured-count" class="text-2xl font-bold">Chargement...</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Products -->
                    <div class="bg-white rounded-lg shadow p-6 mb-8">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-xl font-semibold">Produits r√©cents</h3>
                            <button onclick="loadProducts()" class="text-purple-600 hover:text-purple-800 font-medium">
                                G√©rer les produits ‚Üí
                            </button>
                        </div>
                        <div id="recent-products">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead>
                                    <tr>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produit</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prix</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="recent-products-body" class="bg-white divide-y divide-gray-200">
                                    <!-- Les produits seront charg√©s ici -->
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="bg-white rounded-lg shadow p-6">
                        <h3 class="text-xl font-semibold mb-6">Actions rapides</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <button onclick="showAddProductModal()" class="bg-purple-600 text-white rounded-lg p-4 text-center hover:bg-purple-700 transition">
                                <i class="fas fa-plus text-2xl mb-2"></i>
                                <p>Ajouter un produit</p>
                            </button>
                            <button onclick="loadOrders()" class="bg-blue-600 text-white rounded-lg p-4 text-center hover:bg-blue-700 transition">
                                <i class="fas fa-eye text-2xl mb-2"></i>
                                <p>Voir les commandes</p>
                            </button>
                            <button onclick="loadSettings()" class="bg-green-600 text-white rounded-lg p-4 text-center hover:bg-green-700 transition">
                                <i class="fas fa-cog text-2xl mb-2"></i>
                                <p>Param√®tres</p>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal pour ajouter/modifier produit -->
    <div id="productModal" class="modal">
        <div class="modal-content">
            <span class="close float-right text-2xl cursor-pointer" onclick="closeModal()">&times;</span>
            <h2 class="text-2xl font-bold mb-6" id="modal-title">Ajouter un produit</h2>
            <form id="productForm" onsubmit="saveProduct(event)" enctype="multipart/form-data">
                <input type="hidden" id="productId">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Nom du produit *</label>
                        <input type="text" id="productName" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Prix (‚Ç¨) *</label>
                        <input type="number" id="productPrice" step="0.01" min="0" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent">
                    </div>
                    
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <textarea id="productDescription" rows="3" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent"></textarea>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Cat√©gorie</label>
                        <select id="productCategory" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent">
                            <option value="">S√©lectionner</option>
                            <option value="homme">Homme</option>
                            <option value="femme">Femme</option>
                            <option value="unisexe">Unisexe</option>
                            <option value="luxe">Luxe</option>
                        </select>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Stock *</label>
                        <input type="number" id="productStock" min="0" value="0" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-purple-600 focus:border-transparent">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Image du produit</label>
                        <input type="file" id="productImage" accept="image/*" class="w-full px-4 py-2 border rounded-lg" onchange="previewImage(event)">
                        <div id="imagePreview" class="mt-2"></div>
                        <div id="currentImage" class="mt-2"></div>
                        <p class="text-xs text-gray-500 mt-1">Formats accept√©s: JPEG, JPG, PNG, GIF, WebP (max 10MB)</p>
                    </div>
                    
                    <div class="flex items-center mt-4">
                        <input type="checkbox" id="productFeatured" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
                        <label class="ml-2 text-sm text-gray-700">Mettre en vedette</label>
                    </div>
                </div>
                
                <div class="mt-8 flex justify-end space-x-4">
                    <button type="button" onclick="closeModal()" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Annuler</button>
                    <button type="submit" id="saveBtn" class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700">
                        <span id="saveBtnText">Enregistrer</span>
                        <span id="saveBtnLoader" class="hidden ml-2">
                            <i class="fas fa-spinner fa-spin"></i>
                        </span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const API_URL = window.location.origin;
        let currentView = 'dashboard';
        let products = [];

        // Fonction pour obtenir l'URL de l'image
        function getImageUrl(product) {
            if (!product.image) {
                return 'https://via.placeholder.com/150';
            }
            
            if (product.image.startsWith('http')) {
                return product.image;
            }
            
            if (product.image.startsWith('/uploads/')) {
                return `${API_URL}${product.image}`;
            }
            
            return `${API_URL}/uploads/${product.image}`;
        }

        // Pr√©visualisation d'image
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = '';
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'image-preview';
                    preview.appendChild(img);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Charger les statistiques du dashboard
        async function loadDashboardStats() {
            try {
                const productsRes = await fetch(`${API_URL}/api/products`);
                products = await productsRes.json();
                
                document.getElementById('products-count').textContent = products.length;
                const featuredCount = products.filter(p => p.featured === true || p.featured === 1).length;
                document.getElementById('featured-count').textContent = featuredCount;

                // Afficher les 5 produits les plus r√©cents
                const recentProducts = products.slice(0, 5);
                const tbody = document.getElementById('recent-products-body');
                tbody.innerHTML = recentProducts.map(product => {
                    const imageUrl = getImageUrl(product);
                    const stock = product.stock || 0;
                    
                    return `
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        <img class="h-10 w-10 rounded-full object-cover" 
                                             src="${imageUrl}" 
                                             alt="${product.name}"
                                             onerror="this.src='https://via.placeholder.com/150'">
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">${product.name}</div>
                                        <div class="text-sm text-gray-500">${product.category || 'Non cat√©goris√©'}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">${product.price || 0}‚Ç¨</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${stock > 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}">
                                    ${stock} en stock
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                ${new Date(product.created_at).toLocaleDateString('fr-FR')}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <button onclick="editProduct(${product.id})" class="text-blue-600 hover:text-blue-900 mr-3">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button onclick="deleteProduct(${product.id})" class="text-red-600 hover:text-red-900">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                }).join('');

            } catch (error) {
                console.error('Erreur de chargement:', error);
                showNotification('Erreur de chargement des donn√©es', 'error');
            }
        }

        // Charger la vue produits
        async function loadProducts() {
            currentView = 'products';
            document.getElementById('page-title').textContent = 'Gestion des produits';
            
            try {
                const response = await fetch(`${API_URL}/api/products`);
                products = await response.json();
                
                const content = `
                    <div class="mb-8">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-2xl font-bold">Produits (${products.length})</h3>
                            <button onclick="showAddProductModal()" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 flex items-center">
                                <i class="fas fa-plus mr-2"></i>Ajouter un produit
                            </button>
                        </div>
                        
                        <div class="bg-white rounded-lg shadow overflow-hidden">
                            ${products.length === 0 ? `
                                <div class="text-center py-12 px-6">
                                    <i class="fas fa-cube text-4xl mb-4 text-gray-300"></i>
                                    <p class="text-lg text-gray-600">Aucun produit</p>
                                    <p class="text-sm text-gray-500 mt-2">Commencez par ajouter votre premier produit</p>
                                    <button onclick="showAddProductModal()" class="mt-4 bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700">
                                        <i class="fas fa-plus mr-2"></i>Ajouter un produit
                                    </button>
                                </div>
                            ` : `
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produit</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prix</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cat√©gorie</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        ${products.map(product => {
                                            const imageUrl = getImageUrl(product);
                                            const stock = product.stock || 0;
                                            const featured = product.featured === true || product.featured === 1;
                                            
                                            return `
                                                <tr>
                                                    <td class="px-6 py-4">
                                                        <div class="flex items-center">
                                                            <div class="flex-shrink-0 h-12 w-12">
                                                                <img class="h-12 w-12 rounded object-cover" 
                                                                     src="${imageUrl}" 
                                                                     alt="${product.name}"
                                                                     onerror="this.src='https://via.placeholder.com/150'">
                                                            </div>
                                                            <div class="ml-4">
                                                                <div class="text-sm font-medium text-gray-900">${product.name}</div>
                                                                <div class="text-sm text-gray-500 truncate max-w-xs">${product.description || 'Pas de description'}</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <div class="text-sm text-gray-900 font-bold">${product.price || 0}‚Ç¨</div>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                                            ${product.category || 'Non cat√©goris√©'}
                                                        </span>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${stock > 10 ? 'bg-green-100 text-green-800' : stock > 0 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800'}">
                                                            ${stock} unit√©s
                                                        </span>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap">
                                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${featured ? 'bg-purple-100 text-purple-800' : 'bg-gray-100 text-gray-800'}">
                                                            ${featured ? 'En vedette' : 'Standard'}
                                                        </span>
                                                    </td>
                                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                                        <button onclick="editProduct(${product.id})" class="text-blue-600 hover:text-blue-900 mr-3" title="Modifier">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button onclick="deleteProduct(${product.id})" class="text-red-600 hover:text-red-900" title="Supprimer">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            `;
                                        }).join('')}
                                    </tbody>
                                </table>
                            `}
                        </div>
                    </div>
                `;
                
                document.getElementById('content-area').innerHTML = content;
                
            } catch (error) {
                console.error('Erreur:', error);
                document.getElementById('content-area').innerHTML = `
                    <div class="bg-red-50 border border-red-200 rounded-lg p-6">
                        <div class="text-red-800">
                            <i class="fas fa-exclamation-circle mr-2"></i>
                            Erreur de chargement des produits. Veuillez r√©essayer.
                        </div>
                    </div>
                `;
            }
        }

        // Charger la vue commandes
        function loadOrders() {
            currentView = 'orders';
            document.getElementById('page-title').textContent = 'Commandes';
            
            const content = `
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-xl font-semibold mb-6">Commandes</h3>
                    <div class="text-center py-12 text-gray-500">
                        <i class="fas fa-shopping-cart text-4xl mb-4 text-gray-300"></i>
                        <p class="text-lg">Aucune commande pour le moment</p>
                        <p class="text-sm mt-2">Les commandes appara√Ætront ici lorsque les clients passeront commande</p>
                    </div>
                </div>
            `;
            
            document.getElementById('content-area').innerHTML = content;
        }

        // Charger la vue param√®tres
        async function loadSettings() {
            currentView = 'settings';
            document.getElementById('page-title').textContent = 'Param√®tres';
            
            const content = `
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-xl font-semibold mb-6">Param√®tres du compte</h3>
                    
                    <div class="mb-8">
                        <h4 class="text-lg font-medium mb-4">Changer le mot de passe</h4>
                        <form onsubmit="changePassword(event)" class="space-y-4 max-w-md">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Mot de passe actuel</label>
                                <input type="password" id="currentPassword" required class="w-full px-4 py-2 border rounded-lg">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Nouveau mot de passe</label>
                                <input type="password" id="newPassword" required minlength="6" class="w-full px-4 py-2 border rounded-lg">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Confirmer le nouveau mot de passe</label>
                                <input type="password" id="confirmPassword" required minlength="6" class="w-full px-4 py-2 border rounded-lg">
                            </div>
                            <button type="submit" class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700">
                                Changer le mot de passe
                            </button>
                        </form>
                    </div>
                    
                    <div class="border-t pt-6">
                        <h4 class="text-lg font-medium mb-4">Informations du compte</h4>
                        <div class="space-y-2">
                            <p><strong>Nom d'utilisateur:</strong> <%= user.username %></p>
                            <p><strong>Email:</strong> <%= user.email || 'Non d√©fini' %></p>
                            <p><strong>R√¥le:</strong> Administrateur</p>
                        </div>
                    </div>
                </div>
            `;
            
            document.getElementById('content-area').innerHTML = content;
        }

        // Modal pour ajouter/modifier produit
        function showAddProductModal() {
            document.getElementById('modal-title').textContent = 'Ajouter un produit';
            document.getElementById('productForm').reset();
            document.getElementById('productId').value = '';
            document.getElementById('productStock').value = '0';
            document.getElementById('imagePreview').innerHTML = '';
            document.getElementById('currentImage').innerHTML = '';
            document.getElementById('productModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('productModal').style.display = 'none';
        }

        // √âditer un produit
        async function editProduct(id) {
            const product = products.find(p => p.id == id);
            if (!product) return;
            
            document.getElementById('modal-title').textContent = 'Modifier le produit';
            document.getElementById('productId').value = product.id;
            document.getElementById('productName').value = product.name;
            document.getElementById('productPrice').value = product.price || 0;
            document.getElementById('productDescription').value = product.description || '';
            document.getElementById('productCategory').value = product.category || '';
            document.getElementById('productStock').value = product.stock || 0;
            document.getElementById('productFeatured').checked = product.featured === true || product.featured === 1;
            
            // Afficher l'image actuelle
            const currentImageDiv = document.getElementById('currentImage');
            const imagePreviewDiv = document.getElementById('imagePreview');
            imagePreviewDiv.innerHTML = '';
            
            if (product.image) {
                const imageUrl = getImageUrl(product);
                currentImageDiv.innerHTML = `
                    <p class="text-sm text-gray-600 mb-2">Image actuelle:</p>
                    <img src="${imageUrl}" class="current-image" onerror="this.style.display='none'">
                `;
            } else {
                currentImageDiv.innerHTML = '';
            }
            
            document.getElementById('productModal').style.display = 'block';
        }

        // Sauvegarder un produit
        async function saveProduct(event) {
            event.preventDefault();
            
            const saveBtn = document.getElementById('saveBtn');
            const saveBtnText = document.getElementById('saveBtnText');
            const saveBtnLoader = document.getElementById('saveBtnLoader');
            
            // D√©sactiver le bouton et afficher le loader
            saveBtn.disabled = true;
            saveBtnText.textContent = 'Enregistrement...';
            saveBtnLoader.classList.remove('hidden');
            
            try {
                const formData = new FormData();
                formData.append('name', document.getElementById('productName').value);
                formData.append('price', document.getElementById('productPrice').value);
                formData.append('description', document.getElementById('productDescription').value);
                formData.append('category', document.getElementById('productCategory').value);
                formData.append('stock', document.getElementById('productStock').value);
                formData.append('featured', document.getElementById('productFeatured').checked);
                
                const imageFile = document.getElementById('productImage').files[0];
                if (imageFile) {
                    formData.append('image', imageFile);
                }
                
                const productId = document.getElementById('productId').value;
                const method = productId ? 'PUT' : 'POST';
                const url = productId ? `${API_URL}/api/products/${productId}` : `${API_URL}/api/products`;
                
                const response = await fetch(url, {
                    method: method,
                    body: formData,
                    credentials: 'include'
                });
                
                if (response.ok) {
                    closeModal();
                    showNotification(productId ? 'Produit mis √† jour avec succ√®s' : 'Produit ajout√© avec succ√®s', 'success');
                    
                    // Recharger la vue actuelle
                    if (currentView === 'products') {
                        loadProducts();
                    } else {
                        loadDashboardStats();
                    }
                } else {
                    const error = await response.json();
                    showNotification(error.error || 'Erreur lors de la sauvegarde', 'error');
                }
            } catch (error) {
                console.error('Erreur:', error);
                showNotification('Erreur de connexion au serveur', 'error');
            } finally {
                // R√©activer le bouton
                saveBtn.disabled = false;
                saveBtnText.textContent = 'Enregistrer';
                saveBtnLoader.classList.add('hidden');
            }
        }

        // Supprimer un produit
        async function deleteProduct(id) {
            if (!confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ? Cette action est irr√©versible.')) return;
            
            try {
                const response = await fetch(`${API_URL}/api/products/${id}`, {
                    method: 'DELETE',
                    credentials: 'include'
                });
                
                if (response.ok) {
                    showNotification('Produit supprim√© avec succ√®s', 'success');
                    
                    // Recharger la vue actuelle
                    if (currentView === 'products') {
                        loadProducts();
                    } else {
                        loadDashboardStats();
                    }
                } else {
                    const error = await response.json();
                    showNotification(error.error || 'Erreur lors de la suppression', 'error');
                }
            } catch (error) {
                console.error('Erreur:', error);
                showNotification('Erreur de connexion au serveur', 'error');
            }
        }

        // Changer le mot de passe
        async function changePassword(event) {
            event.preventDefault();
            
            const currentPassword = document.getElementById('currentPassword').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (newPassword !== confirmPassword) {
                showNotification('Les mots de passe ne correspondent pas', 'error');
                return;
            }
            
            if (newPassword.length < 6) {
                showNotification('Le mot de passe doit faire au moins 6 caract√®res', 'error');
                return;
            }
            
            try {
                const response = await fetch(`${API_URL}/api/auth/change-password`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify({
                        currentPassword,
                        newPassword
                    })
                });
                
                if (response.ok) {
                    showNotification('Mot de passe chang√© avec succ√®s', 'success');
                    document.getElementById('currentPassword').value = '';
                    document.getElementById('newPassword').value = '';
                    document.getElementById('confirmPassword').value = '';
                } else {
                    const error = await response.json();
                    showNotification(error.error || 'Erreur lors du changement de mot de passe', 'error');
                }
            } catch (error) {
                console.error('Erreur:', error);
                showNotification('Erreur de connexion au serveur', 'error');
            }
        }

        // D√©connexion
        async function logout() {
            try {
                await fetch(`${API_URL}/api/auth/logout`, {
                    method: 'POST',
                    credentials: 'include'
                });
                window.location.href = '/admin/login';
            } catch (error) {
                console.error('Erreur de d√©connexion:', error);
                window.location.href = '/admin/login';
            }
        }

        // Notifications
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} mr-2"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.remove();
                }
            }, 3000);
        }

        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardStats();
            
            // Fermer le modal en cliquant en dehors
            window.onclick = function(event) {
                const modal = document.getElementById('productModal');
                if (event.target === modal) {
                    closeModal();
                }
            };
        });

